@using Blog.Application.Queries.Posts.GetApproveRespond
<div class="h-screen bg-gray-50 py-8 px-4 overflow-auto">
    <div class="max-w-7xl mx-auto -mt-10">

        <div class="bg-white rounded-lg shadow ">
            <div class="px-6 py-4 border-b border-gray-200 flex  justify-between items-center">
                <div><h1 class="font-semibold text-lg text-gray-600">Posts & Responses</h1></div>
                <button @onclick="RefreshAll"
                        disabled="@isLoading"
                        class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2">
                    <svg class="w-4 h-4 @(isLoading ? "animate-spin" : "")" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    Refresh
                </button>
            </div>

            <div class="divide-y divide-gray-200 ">
                @* Loading State *@
                @if (isLoading && CombinedItems.Count == 0)
                {
                    @for (int i = 0; i < 3; i++)
                    {
                        <div class="p-6 animate-pulse">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <div class="flex items-center gap-2 mb-2">
                                        <div class="h-5 bg-gray-200 rounded-full w-20"></div>
                                        <div class="h-4 bg-gray-200 rounded w-32"></div>
                                    </div>
                                    <div class="h-6 bg-gray-200 rounded w-3/4 mb-2"></div>
                                    <div class="h-4 bg-gray-200 rounded w-full mb-1"></div>
                                    <div class="h-4 bg-gray-200 rounded w-5/6 mb-3"></div>
                                    <div class="flex items-center gap-4">
                                        <div class="h-4 bg-gray-200 rounded w-24"></div>
                                        <div class="h-4 bg-gray-200 rounded w-28"></div>
                                    </div>
                                </div>
                                <div class="flex items-center ml-4">
                                    <div class="h-10 bg-gray-200 rounded-lg w-32"></div>
                                </div>
                            </div>
                        </div>
                    }
                }
                @* Empty State *@
                else if (CombinedItems.Count == 0)
                {
                    <div class="p-16 text-center">
                        <div class="inline-flex items-center justify-center w-20 h-20 bg-blue-50 rounded-full mb-4">
                            <svg class="w-10 h-10 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">No Posts or Responses</h3>
                        <p class="text-gray-500 mb-6 max-w-md mx-auto">
                            You don't have any pending posts or approval responses at the moment.
                        </p>
                        <div class="flex gap-3 justify-center">
                            <button class="px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors">
                                Create New Post
                            </button>
                            <button @onclick="RefreshAll" class="px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-200 transition-colors">
                                Refresh
                            </button>
                        </div>
                    </div>
                }
                @* Combined List *@
                else
                {
                    @foreach (var item in CombinedItems)
                    {
                        @if (item is ApproveRespondDto response)
                        {
                            @* Response Cards *@
                            @if (response.Type == EntityEnum.Type.PostApproval)
                            {
                                <!-- Approved Post Card -->
                                <div class="p-6 hover:bg-gray-50 transition-colors">
                                    <div class="flex items-start gap-4 p-4 border border-green-200 bg-green-50 rounded-lg">
                                        <div class="flex-shrink-0 mt-1">
                                            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                                                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                </svg>
                                            </div>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <div class="flex items-center gap-2 mb-2">
                                                <h3 class="text-base font-semibold text-green-900">Post Approved</h3>
                                                <span class="text-xs text-green-700">• @FormatDate(response.CreatedAt)</span>
                                            </div>
                                            <p class="text-lg font-bold text-gray-900 mb-2 line-clamp-1">
                                                @response.Title
                                            </p>
                                            <p class="text-sm text-green-800">
                                                Your post has been approved and is now published.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <!-- Declined Post Card -->
                                <div class="p-6 hover:bg-gray-50 transition-colors">
                                    <div class="flex items-start gap-4 p-4 border border-red-200 bg-red-50 rounded-lg">
                                        <div class="flex-shrink-0 mt-1">
                                            <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center">
                                                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                </svg>
                                            </div>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <div class="flex items-center gap-2 mb-2">
                                                <h3 class="text-base font-semibold text-red-900">Post Declined</h3>
                                                <span class="text-xs text-red-700">• @FormatDate(response.CreatedAt)</span>
                                            </div>
                                            <p class="text-lg font-bold text-gray-900 mb-2 line-clamp-1">
                                                @response.Title
                                            </p>
                                            <p class="text-sm text-red-800">
                                                Your post has been declined. After review, it was not approved for publication.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else if (item is PendingRequestDto pending)
                        {
                            @* Pending Post Card *@
                            <div class="p-6 hover:bg-gray-50 transition-colors">
                                <div class="flex items-start justify-between gap-6">
                                    <div class="flex-1 min-w-0">
                                        <div class="flex items-center gap-3 mb-2 flex-wrap">
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                @pending.CategoryName
                                            </span>
                                            <span class="text-sm text-gray-500">
                                                Submitted @FormatDate(pending.CreatedAt)
                                            </span>
                                        </div>

                                        <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
                                            @pending.Title
                                        </h3>

                                        <div class="prose prose-sm max-w-none line-clamp-2 mb-3 text-gray-600">
                                            @((MarkupString)pending.Content!)
                                        </div>

                                        <div class="flex items-center gap-4 text-sm text-gray-500 flex-wrap">
                                            <span class="flex items-center gap-1">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                                </svg>
                                                @pending.Name
                                            </span>
                                            <span class="flex items-center gap-1">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                </svg>
                                                @pending.readingDuration.GetDisplayName()
                                            </span>
                                        </div>
                                    </div>

                                    <div class="flex items-center">
                                        <div class="px-4 py-2 bg-amber-50 border border-amber-200 rounded-lg">
                                            <div class="flex items-center gap-2">
                                                <div class="relative">
                                                    <span class="flex h-3 w-3">
                                                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-amber-400 opacity-75"></span>
                                                        <span class="relative inline-flex rounded-full h-3 w-3 bg-amber-500"></span>
                                                    </span>
                                                </div>
                                                <span class="text-sm font-medium text-amber-800">Under Review</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
            </div>

            @* Pagination *@
            @if (Pendings?.Items is not null && Pendings.Items.Any() && Pendings.TotalCount > Pendings.PageSize)
            {
                <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
                    <div class="text-sm text-gray-700">
                        Showing <span class="font-medium">@((Pendings.PageNumber - 1) * Pendings.PageSize + 1)</span>
                        to <span class="font-medium">@Math.Min(Pendings.PageNumber * Pendings.PageSize, Pendings.TotalCount)</span>
                        of <span class="font-medium">@Pendings.TotalCount</span> posts
                    </div>
                    <div class="flex gap-2">
                        <button @onclick="PreviousPage"
                                disabled="@(Pendings.PageNumber <= 1 || isLoading)"
                                class="px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                            Previous
                        </button>
                        <button @onclick="NextPage"
                                disabled="@(Pendings.PageNumber >= Math.Ceiling((double)Pendings.TotalCount / Pendings.PageSize) || isLoading)"
                                class="px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                            Next
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private PagedResult<ApproveRespondDto>? ApproveResponse { get; set; } = new PagedResult<ApproveRespondDto>();
    private PagedResult<PendingRequestDto>? Pendings { get; set; }
    private ListPaginatedRequest PaginationPending { get; set; } = new ListPaginatedRequest { PageNumber = 1, PageSize = 10 };
    private ListPaginatedRequest PaginationResponse { get; set; } = new ListPaginatedRequest { PageNumber = 1, PageSize = 10 };
    private bool isLoading = false;

    private List<object> CombinedItems
    {
        get
        {
            var combined = new List<object>();

            // Add approval responses first (they should appear at top)
            if (ApproveResponse?.Items != null)
            {
                combined.AddRange(ApproveResponse.Items.Cast<object>());
            }

            // Then add pending posts
            if (Pendings?.Items != null)
            {
                combined.AddRange(Pendings.Items.Cast<object>());
            }

            return combined;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await RefreshAll();
    }

    private async Task RefreshAll()
    {
        await ListByPending();
        await ApprovalResponse();
    }

    public async Task ApprovalResponse()
    {
        var request = await NotificationClient.GetListApproveRespond(PaginationResponse);
        ApproveResponse = request.Value;
    }

    private async Task ListByPending()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            var response = await PostClient.ListAuthorRequest(PaginationPending);

            if (response?.Value is not null)
            {
                Pendings = new PagedResult<PendingRequestDto>
                {
                    Items = response.Value.Items,
                    PageNumber = response.Value.PageNumber,
                    PageSize = response.Value.PageSize,
                    TotalCount = response.Value.TotalCount
                };
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading pending posts: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task PreviousPage()
    {
        if (PaginationPending.PageNumber > 1)
        {
            PaginationPending.PageNumber--;
            await ListByPending();
        }
    }

    private async Task NextPage()
    {
        if (Pendings is not null && PaginationPending.PageNumber < Math.Ceiling((double)Pendings.TotalCount / Pendings.PageSize))
        {
            PaginationPending.PageNumber++;
            await ListByPending();
        }
    }

    private string FormatDate(DateTime date)
    {
        var timeSpan = DateTime.Now - date;

        if (timeSpan.TotalMinutes < 1)
            return "just now";
        if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes} minutes ago";
        if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours} hours ago";
        if (timeSpan.TotalDays < 7)
            return $"{(int)timeSpan.TotalDays} days ago";

        return date.ToString("MMM dd, yyyy");
    }
}