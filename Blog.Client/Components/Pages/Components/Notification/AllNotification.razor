@using Blog.Application.Queries.Notification.GetListNotification
@using Blog.Client.Realtime


@if (list is null)
{
    <div class="flex flex-col items-center justify-center py-20">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600 mb-4"></div>
        <p class="text-slate-600 font-medium">Loading notifications...</p>
    </div>
}
else if (!list.Any())
{
    <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-12 text-center">
        <div class="w-20 h-20 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
        </div>
        <h3 class="text-xl font-semibold text-slate-900 mb-2">No notifications yet</h3>
        <p class="text-slate-600">When you get notifications, they'll show up here</p>
    </div>
}
else
{
    <div class="space-y-3">
        @foreach (var notif in list)
        {
            var iconConfig = HelperClient.GetIconConfig(notif.Type);

            <div @onclick="() => MarkAsRead.InvokeAsync((notif.Id, notif.PostId))" class="cursor-pointer relative group @(notif.IsRead == false ? @iconConfig.bg : "bg-white") rounded-2xl shadow-sm border border-slate-200 hover:shadow-md hover:border-slate-300 transition-all duration-200">

                @if (notif.IsRead == false)
                {
                    <div class="absolute top-2 right-2  status status-info animate-bounce"></div>
                }

                <div class="p-5">
                    <div class="flex items-start gap-4">

                        <div class="flex-shrink-0">
                            <div class="w-14 h-14  bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl flex items-center justify-center shadow-lg shadow-@iconConfig.ShadowColor transform group-hover:scale-105 transition-transform duration-200">
                                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="@iconConfig.Path" />
                                </svg>
                            </div>
                        </div>

                        <div class="flex-1 min-w-0 pt-1">
                            <div class="flex items-start justify-between gap-3 mb-2">
                                <p class="text-[15px] leading-relaxed">
                                    <span class="font-semibold text-slate-900">@notif.UserName</span>
                                    <span class="text-slate-600"> @HelperClient.ContextAsync(notif.Type)</span>
                                </p>
                            </div>

                            <div class="flex items-center gap-2 text-sm text-slate-500">
                                <time class="font-medium">@notif.CreatedAt.ToString("MMM dd, yyyy")</time>
                                <span class="w-1 h-1 bg-slate-300 rounded-full"></span>
                                <span class="text-xs">@HelperClient.GetTimeAgo(notif.CreatedAt)</span>
                            </div>
                        </div>

                        <div class="flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                            <button @onclick="() => MarkAsRead.InvokeAsync((notif.Id, notif.PostId))" class="p-2 text-slate-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors"
                                    title="Mark as read">
                                <h1 class="cursor-pointer">View</h1>
                            </button>
                            <button @onclick="() => DeleteNotification.InvokeAsync(notif.Id)"
                                    @onclick:stopPropagation="true"
                                    class="cursor-pointer p-2 text-slate-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors"
                                    title="Delete">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}


@if (HasMorePost)
{
    <div class="text-center mt-8">
        <p class="text-sm text-slate-600 mb-4 font-medium">
            Showing <span class="text-indigo-600 font-semibold">@list?.Count</span> of <span class="text-indigo-600 font-semibold">@ListNotif.TotalCount</span> notifications
        </p>
        <button @onclick="() => LoadMorePosts.InvokeAsync()"
                disabled="@isLoadingMore"
                class="px-8 py-3 bg-white text-slate-700 rounded-xl font-medium hover:bg-slate-50 transition-all shadow-sm border border-slate-200 hover:shadow disabled:opacity-50 disabled:cursor-not-allowed">
            @if (isLoadingMore)
            {
                <span class="flex items-center gap-2">
                    <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    Loading...
                </span>
            }
            else
            {
                <span>Load More Notifications</span>
            }
        </button>
    </div>
}
else if (list?.Any() == true)
{
    <div class="text-center mt-8 py-6">
        <div class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-indigo-50 to-purple-50 rounded-xl">
            <span class="text-2xl"></span>
            <p class="text-slate-700 font-medium">
                You're all caught up! All <span class="text-indigo-600 font-semibold">@ListNotif.TotalCount</span> notifications loaded.
            </p>
        </div>
    </div>
}

@code {
    [Parameter]
    public List<GetListNotificationDto>? list { get; set; }

    [Parameter]
    public PagedResult<GetListNotificationDto> ListNotif { get; set; } = new PagedResult<GetListNotificationDto>();

    [Parameter]
    public ListPaginatedRequest pagination { get; set; } = new ListPaginatedRequest { PageNumber = 1, PageSize = 5 };

    [Parameter]
    public bool HasMorePost { get; set; }

    [Parameter]
    public bool isLoadingMore { get; set; }

    [Parameter]
    public EventCallback LoadMorePosts { get; set; }

    [Parameter]
    public EventCallback<(int Id, int? PostId)> MarkAsRead { get; set; }

    [Parameter]
    public EventCallback<int> DeleteNotification { get; set; }

    

   

  
}