@if (Posts != null && Posts.Items.Any())
{
    @foreach (var post in Posts.Items)
    {
        <div class="bg-white rounded-xl p-6 border border-slate-200 hover:border-indigo-500 hover:shadow-xl hover:shadow-indigo-100 transition-all duration-300 hover:-translate-y-1">
            <div class="flex flex-col md:flex-row justify-between items-start gap-2 mb-4">
                <h3 class="text-xl font-semibold text-slate-800 flex-1">@post.Title</h3>
                <span class="text-slate-500 text-sm whitespace-nowrap">@post.CreatedAt.ToString("MMM dd, yyyy")</span>
            </div>


            <p class="text-slate-600 leading-relaxed mb-4 prose prose-sm max-w-none line-clamp-1 [&_*]:!text-sm">@((MarkupString)post.Content!)</p>

            <div class="flex flex-wrap gap-6 mb-4 pb-4 border-b border-slate-100">
                <div class="flex items-center gap-2 text-slate-600 text-sm">
                    <svg class="w-5 h-5 text-indigo-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                        <circle cx="12" cy="12" r="3" />
                    </svg>
                    <span class="font-medium">@post.ViewCount</span>
                </div>
                <div class="flex items-center gap-2 text-slate-600 text-sm">
                    <svg class="w-5 h-5 text-indigo-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                    </svg>
                    <span class="font-medium">@post.PostLikeCount</span>
                </div>
                <div class="flex items-center gap-2 text-slate-600 text-sm">
                    <svg class="w-5 h-5 text-indigo-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z" />
                    </svg>
                    <span class="font-medium">@post.BookMarkCount</span>
                </div>
            </div>

            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                <div class="flex flex-wrap gap-2">
                    @if (post.Tags is null)
                    {
                        <h1>Loading...</h1>
                    }
                    else if (!post.Tags.Any() == true)
                    {
                        <h1>No tags</h1>
                    }
                    else
                    {
                        @foreach (var tag in post.Tags)
                        {
                            <span class="bg-indigo-50 text-indigo-600 px-3 py-1 rounded-lg text-xs font-medium">@tag.Name</span>
                        }
                    }
                </div>
                <NavLink href="@($"viewblogconstruct/{post.Id}")" class="flex items-center gap-2 text-indigo-600 font-medium text-sm hover:gap-3 transition-all duration-300">
                    Read More
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12h14M12 5l7 7-7 7" />
                    </svg>
                </NavLink>
            </div>
        </div>
    }
}
else
{
    <div class="text-center py-16 text-slate-400">
        <svg class="w-16 h-16 mx-auto mb-4 opacity-50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
            <path d="M14 2v6h6M16 13H8M16 17H8M10 9H8" />
        </svg>
        <p class="text-lg">No posts yet</p>
    </div>
}







@code {

    [Parameter]
    public PagedResult<PostDto> Posts { get; set; } = new PagedResult<PostDto>();
}
