@page "/view/{UserId:guid}"
@using static Blog.Client.State.PostViewState


<div class="w-full mx-auto p-4 md:p-8 h-screen overflow-auto">
    @if (isLoading)
    {

        <div class="bg-white rounded-xl p-6 md:p-8 mb-8 border border-slate-200 animate-pulse">
            <div class="flex flex-col md:flex-row items-center md:items-start gap-6 mb-8">
                <div class="w-24 h-24 md:w-28 md:h-28 rounded-full bg-slate-200 flex-shrink-0"></div>
                <div class="text-center md:text-left flex-1 w-full">
                    <div class="h-9 bg-slate-200 rounded-lg mb-3 max-w-xs mx-auto md:mx-0"></div>
                    <div class="flex flex-wrap items-center justify-center md:justify-start gap-3">
                        <div class="h-5 w-40 bg-slate-200 rounded"></div>
                        <div class="h-6 w-16 bg-slate-200 rounded-lg"></div>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                @for (int i = 0; i < 4; i++)
                {
                    <div class="bg-slate-50 rounded-lg p-4 text-center border border-slate-100">
                        <div class="h-8 bg-slate-200 rounded mb-2 w-16 mx-auto"></div>
                        <div class="h-4 bg-slate-200 rounded w-12 mx-auto"></div>
                    </div>
                }
            </div>
        </div>

        <div class="mt-8">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
                <div class="h-8 w-32 bg-slate-200 rounded-lg animate-pulse"></div>
                <div class="h-10 w-40 bg-slate-200 rounded-lg animate-pulse"></div>
            </div>

            <div class="space-y-6">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="bg-white rounded-xl p-6 border border-slate-200 animate-pulse">
                        <div class="flex flex-col md:flex-row justify-between items-start gap-2 mb-4">
                            <div class="h-7 bg-slate-200 rounded flex-1 max-w-md"></div>
                            <div class="h-5 w-24 bg-slate-200 rounded"></div>
                        </div>

                        <div class="h-4 bg-slate-200 rounded mb-2"></div>
                        <div class="h-4 bg-slate-200 rounded mb-4 w-3/4"></div>

                        <div class="flex flex-wrap gap-6 mb-4 pb-4 border-b border-slate-100">
                            @for (int j = 0; j < 3; j++)
                            {
                                <div class="flex items-center gap-2">
                                    <div class="w-5 h-5 bg-slate-200 rounded"></div>
                                    <div class="h-4 w-8 bg-slate-200 rounded"></div>
                                </div>
                            }
                        </div>

                        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                            <div class="flex flex-wrap gap-2">
                                @for (int j = 0; j < 3; j++)
                                {
                                    <div class="h-6 w-16 bg-slate-200 rounded-lg"></div>
                                }
                            </div>
                            <div class="h-5 w-24 bg-slate-200 rounded"></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {

        <div class="bg-white rounded-xl p-6 md:p-8 mb-8 border border-slate-200">
            <div class="flex flex-col md:flex-row items-center md:items-start gap-6 mb-8">
                <div class="w-24 h-24 md:w-28 md:h-28 rounded-full overflow-hidden border-2 border-indigo-100 bg-indigo-50 flex-shrink-0">
                    @if (!string.IsNullOrEmpty(User.ProfilePhoto))
                    {
                        <img src="@User?.ProfilePhoto" class="w-full h-full object-cover" />
                    }
                    else
                    {
                        <img src="/img/icon-proff.png" class="w-full h-full object-cover" />
                    }
                </div>
                <div class="text-center md:text-left flex-1">
                    <h1 class="text-3xl md:text-4xl font-bold mb-2 text-slate-900">@User?.Name</h1>
                    <div class="flex flex-wrap items-center justify-center md:justify-start gap-3 text-sm md:text-base text-slate-600">
                        <span class="flex items-center gap-2">
                            <svg class="w-4 h-4" viewBox="0 0 16 16" fill="currentColor">
                                <path d="M8 2a6 6 0 100 12A6 6 0 008 2zM4.5 8a.5.5 0 01.5-.5h2.5V5a.5.5 0 011 0v3a.5.5 0 01-.5.5H5a.5.5 0 01-.5-.5z" />
                            </svg>
                            Joined @User?.CreatedAt.ToString("MMMM dd, yyyy")
                        </span>
                        <span class="bg-indigo-50 text-indigo-600 px-3 py-1 rounded-lg text-sm font-medium">Active</span>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                <div class="bg-slate-50 rounded-lg p-4 text-center border border-slate-100">
                    <div class="text-2xl font-semibold mb-0.5 text-gray-700">@User?.TotalPost</div>
                    <div class="text-xs text-gray-500">Posts</div>
                </div>
                <div class="bg-slate-50 rounded-lg p-4 text-center border border-slate-100">
                    <div class="text-2xl font-semibold mb-0.5 text-gray-700">@User?.TotalViews</div>
                    <div class="text-xs text-gray-500">Total Views</div>
                </div>
                <div class="bg-slate-50 rounded-lg p-4 text-center border border-slate-100">
                    <div class="text-2xl font-semibold mb-0.5 text-gray-700">@User?.TotalLikes</div>
                    <div class="text-xs text-gray-500">Total Likes</div>
                </div>
                <div class="bg-slate-50 rounded-lg p-4 text-center border border-slate-100">
                    <div class="text-2xl font-semibold mb-0.5 text-gray-700">@User?.TotalBookMarks</div>
                    <div class="text-xs text-gray-500">Bookmarks</div>
                </div>
            </div>
        </div>


        <div class="mt-8">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
                <h2 class="text-2xl md:text-3xl font-bold text-slate-800">All Posts</h2>
                <select class="px-4 py-2 border border-slate-200 rounded-lg bg-white text-slate-600 text-sm
                           focus:outline-none focus:ring-2 focus:ring-indigo-500
                           disabled:opacity-60 disabled:cursor-not-allowed"
                        disabled="@isSortLoading"
                        @onchange="OnSortChanged">

                    <option value="most_recent">Most Recent</option>
                    <option value="most_viewed">Most Viewed</option>
                    <option value="most_liked">Most Liked</option>

                </select>

            </div>

            @if (isSortLoading)
            {
                <div class="flex justify-center py-6">
                    <svg class="animate-spin h-6 w-6 text-indigo-600"
                         xmlns="http://www.w3.org/2000/svg"
                         fill="none"
                         viewBox="0 0 24 24">
                        <circle class="opacity-25"
                                cx="12"
                                cy="12"
                                r="10"
                                stroke="currentColor"
                                stroke-width="4"></circle>
                        <path class="opacity-75"
                              fill="currentColor"
                              d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"></path>
                    </svg>
                </div>
            }
            else
            {
                <div class="space-y-6">
                    <DashboardState Posts="Posts" />
                </div>
            }





        </div>
    }
</div>

@code {
    [Parameter]
    public Guid UserId { get; set; }

    private bool isSortLoading = false;


    public UserDashboardDto User { get; set; } = new UserDashboardDto();
    public PagedResult<PostDto> Posts { get; set; } = new PagedResult<PostDto>();
    public ListPaginatedRequest Pagination { get; set; } = new ListPaginatedRequest { PageNumber = 1, PageSize = 10 };
    private bool isLoading = true;

    protected override async Task OnParametersSetAsync()
    {
        isLoading = true;
        await Get();
        await MostRecent();
        isLoading = false;

    }
    private async Task OnSortChanged(ChangeEventArgs e)
    {
        if (e.Value is null)
            return;

        isSortLoading = true;
        StateHasChanged();

        switch (e.Value.ToString())
        {
            case "most_recent":
                await MostRecent();
                break;

            case "most_viewed":
                await MostViewed();
                break;

            case "most_liked":
                await MostLiked();
                break;
        }

        isSortLoading = false;
        StateHasChanged();
    }

    public async Task MostViewed()
    {
        var request = await PostClient.ListByMostViewed(UserId, Pagination);
        if (request.Value is not null)
            Posts = request.Value;
        PostViewState.AuthorDashBoard(PostViewState.AuthorDashboard.most_viewed);
    }
    public async Task MostRecent()
    {
        var request = await PostClient.ListByMostRecent(UserId, Pagination);
        if (request.Value is not null)
            Posts = request.Value;
        PostViewState.AuthorDashBoard(PostViewState.AuthorDashboard.most_recent);
    }
    public async Task MostLiked()
    {
        var request = await PostClient.ListByMostLiked(UserId, Pagination);
        if (request.Value is not null)
            Posts = request.Value;
        PostViewState.AuthorDashBoard(PostViewState.AuthorDashboard.most_liked);
    }

    public async Task Get()
    {
        var request = await UserClient.Get(UserId);
        if (request.Value is not null)
            User = request.Value;
    }
}